<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="page-title">Products</h1>
  <% if can?(:create, Product) %>
    <%= link_to "New Product", new_product_path, class: "btn btn-primary" %>
  <% end %>
</div>

<div class="row g-3">
  <% @products.each do |p| %>
    <div class="col-md-3">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= p.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= p.sku %></h6>
          <p class="card-text"><%= number_to_currency(p.price) %></p>
          <p class="card-text"><small>Stock: <%= p.stock || 0 %></small></p>
        </div>
        <div class="card-footer d-flex justify-content-between">
          <%= link_to "Show", product_path(p), class: "btn btn-sm btn-outline-primary" %>
          <% if can?(:manage, p) %>
            <div>
              <%= link_to "Edit", edit_product_path(p), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Delete", product_path(p), method: :delete, data: { confirm: "Yakin?" }, class: "btn btn-sm btn-outline-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
