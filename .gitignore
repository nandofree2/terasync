# -------------------------------------------------------------------
# RAILS 7 OFFICIAL + IMPROVED .gitignore
# -------------------------------------------------------------------

# Bundler config
/.bundle

# Environment files
/.env*
!/.env*.erb

# -------------------------------------------------------------------
# LOGS + TMP + CACHE (Rails, Puma, Bootsnap, Assets Cache)
# -------------------------------------------------------------------

/log/*
!/log/.keep

/tmp/*
!/tmp/.keep
/tmp/pids/*
!/tmp/pids/
/tmp/pids/.keep

# Rails bootsnap + cache
/tmp/cache/*
/tmp/cache/bootsnap/*
/tmp/cache/bootsnap/**/*
/tmp/cache/assets/*
/tmp/cache/**

# -------------------------------------------------------------------
# STORAGE (ActiveStorage uploads & temp)
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep